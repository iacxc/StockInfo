<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <LinearGradientBrush x:Key="brush1" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="White" Offset="0.0" />
        <GradientStop Color="LightSkyBlue" Offset="0.5" />
        <GradientStop Color="White" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="brush2" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="White" Offset="0.0" />
        <GradientStop Color="SteelBlue" Offset="0.6" />
        <GradientStop Color="White" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>